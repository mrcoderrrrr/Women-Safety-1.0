<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:context=".registerpage">


    <EditText
        android:id="@+id/name"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="399dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="293dp"
        android:background="@drawable/rectangle" />

    <EditText
        android:id="@+id/password"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/rectangle" />


    <TextView
        android:id="@+id/phoneno1"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="261dp"
        android:gravity="center_vertical"
        android:text="Phone No."
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailid1"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="361dp"
        android:gravity="center_vertical"
        android:text="Email Id"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_name"
        android:layout_width="310dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"

        android:layout_marginTop="92dp"
        android:gravity="top"
        android:text="Enter name , phone number and  email address into your account  and  acesess your  account"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/password1"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="469dp"
        android:gravity="center_vertical"
        android:text="Password"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/registerbut"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/rectanglered"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="166dp"
        android:gravity="center_vertical"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>